@model Kyrsova.Models.LoginModel

@{
    ViewData["Title"] = "Вхід";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Вхід</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div class="form-group mb-3">
                            <label for="email">Електронна пошта</label>
                            <input type="email" class="form-control" id="email" name="Email" placeholder="Введіть вашу електронну пошту" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="password">Пароль</label>
                            <input type="password" class="form-control" id="password" name="Password" placeholder="Введіть ваш пароль" required />
                        </div>
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger">
                                @ViewBag.ErrorMessage
                            </div>
                        }
                        <button type="submit" class="btn btn-primary w-100">Увійти</button>
                    </form>
                    <div class="mt-3 text-center">
                        <a asp-controller="Home" asp-action="Registrate">Немає аккаунту? Зареєструйтесь тут</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>