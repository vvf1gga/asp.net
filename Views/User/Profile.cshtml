@model Kyrsova.Models.User

@{
    ViewData["Title"] = "Profile";
}

<h1>@Model.FirstName @Model.LastName's Profile</h1>

<div class="profile">
    <div class="profile-details">
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        <p><strong>FirstName</strong> @Model.PhoneNumber</p>
        <p><strong>LastName:</strong> @Model.PhoneNumber</p>

    </div>

    <a href="@Url.Action("Edit", "User")" class="btn btn-primary">Edit Profile</a>
</div>