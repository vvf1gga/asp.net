@model Kyrsova.Models.Event

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Створіть власну подію</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label">Назва</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Опис</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6 mb-3">
                                <label asp-for="StartDateTime" class="form-label">Дата та час початку</label>
                                <input asp-for="StartDateTime" class="form-control" type="datetime-local" />
                                <span asp-validation-for="StartDateTime" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6 mb-3">
                                <label asp-for="EndDateTime" class="form-label">Дата та час закінчення</label>
                                <input asp-for="EndDateTime" class="form-control" type="datetime-local" />
                                <span asp-validation-for="EndDateTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="City" class="form-label">Оберіть місто</label>
                            <select asp-for="City" class="form-select">
                                <option value="">Оберіть місто</option>
                                @foreach (var city in Enum.GetValues(typeof(Kyrsova.Models.City)))
                                {
                                    <option value="@city">@city</option>
                                }
                            </select>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ParticipantCount" class="form-label">Кількість учасників</label>
                            <input asp-for="ParticipantCount" class="form-control" type="number" />
                            <span asp-validation-for="ParticipantCount" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Створити подію</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>