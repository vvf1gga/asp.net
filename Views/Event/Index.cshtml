@model IEnumerable<Kyrsova.Models.Event>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white text-center">
                    <h3>Переглянути події</h3>
                </div>
                <div class="card-body p-4">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Назва</th>
                                <th>Опис</th>
                                <th>Дата початку</th>
                                <th>Дата закінчення</th>
                                <th>Місто</th>
                                <th>Кількість учасників</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var eventModel in Model)
                            {
                                <tr>
                                    <td>@eventModel.Title</td>
                                    <td>@eventModel.Description</td>
                                    <td>@eventModel.StartDateTime.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@eventModel.EndDateTime.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@eventModel.City</td>
                                    <td>@eventModel.ParticipantCount</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>